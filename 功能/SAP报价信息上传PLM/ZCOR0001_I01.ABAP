MODULE user_command_9100_exit.
  DATA lv_code TYPE sy-ucomm.
  lv_code = gv_code.
  CLEAR gv_code.
  CASE lv_code.
    WHEN 'CANC'.
      LEAVE TO SCREEN 0.
    WHEN 'EXIT'.
      LEAVE TO SCREEN 0.
    WHEN 'BACK'.
      LEAVE TO SCREEN 0.
    WHEN OTHERS.
  ENDCASE.

ENDMODULE.